{
    "id": "com.yarivkraus.tablewidget",
    "version": "1.0.3",
    "name": "Yariv's Table Widget",
    "description": "Custom SAC widget from yarivkraus",
    "newInstancePrefix": "TableWidget",
    "vendor": "Kraus and Dauthers",
    "eula": "",
    "license": "",
    "webcomponents": [
        {
            "kind": "main",
            "tag": "com-yarivkraus-tablewidget",
            "url": "https://cdn.jsdelivr.net/gh/yarivkraus/SAC-Custom-Widget@main/main.js?v=3",
            "integrity": "",
            "ignoreIntegrity": true
        },
        {
            "kind": "styling",
            "tag": "com-yarivkraus-tablewidget-styling",
            "url": "https://cdn.jsdelivr.net/gh/yarivkraus/SAC-Custom-Widget@main/styling.js?v=3",
            "integrity": "",
            "ignoreIntegrity": true
        }
    ],
    "properties": {
        "title": {
            "type": "string",
            "description": "Widget Title",
            "default": "Data Table"
        },
        "showInputFields": {
            "type": "boolean",
            "description": "Show Input Fields",
            "default": true
        },
        "maxRows": {
            "type": "integer",
            "description": "Maximum Rows to Display",
            "default": 10
        },
        "primaryColor": {
            "type": "string",
            "description": "Primary Theme Color",
            "default": "#0854a0"
        }
    },
    "methods": {
        "addRow": {
            "description": "Add a new row to the table"
        },
        "clearTable": {
            "description": "Clear all table data"
        },
        "getData": {
            "description": "Get current table data",
            "returnType": "any"
        }
    },
    "events": {
        "onRowSelect": {
            "description": "Triggered when a row is selected"
        },
        "onDataChange": {
            "description": "Triggered when data changes"
        }
    },
    "dataBindings": {
        "tableData": {
            "feeds": [
                {
                    "id": "dimensions",
                    "type": "dimension",
                    "description": "Dimensions"
                },
                {
                    "id": "measures",
                    "type": "mainStructureMember",
                    "description": "Measures"
                }
            ]
        }
    }
}

